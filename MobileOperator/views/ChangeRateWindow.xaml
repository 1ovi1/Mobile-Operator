<Window x:Class="MobileOperator.views.ChangeRateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:local="clr-namespace:MobileOperator"
        mc:Ignorable="d"
        Title="Мобильный оператор" Height="800" Width="900">
    <Grid Background="#1A1A1A">
        <Grid Margin="15">
            <Border Background="#2A2A2A" 
                    BorderBrush="#FF8C00" 
                    BorderThickness="2" 
                    CornerRadius="15" 
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Список доступных тарифов:" 
                               TextAlignment="Center" 
                               FontSize="26" 
                               Foreground="#FFD700" 
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="ListRates"
                                 ItemsSource="{Binding Rates}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 HorizontalContentAlignment="Stretch"
                                 MaxHeight="560"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 VirtualizingStackPanel.IsVirtualizing="True"
                                 VirtualizingStackPanel.VirtualizationMode="Recycling">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1A1A1A" 
                                            BorderBrush="#FF8C00" 
                                            BorderThickness="1" 
                                            CornerRadius="10" 
                                            Padding="20" 
                                            Margin="0,5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Text="{Binding Path=Name}" 
                                                       FontSize="26" 
                                                       Foreground="#FFA500" 
                                                       FontWeight="Bold"
                                                       Margin="0,0,0,15"
                                                       Grid.Row="0"/>
                                            
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="1*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                                    <TextBlock FontSize="16" Foreground="#FFD700" Margin="0,0,0,8">
                                                        <Run Text="Интернет: "/>
                                                        <Run Text="{Binding Path=GB}" Foreground="#FFA500" FontWeight="Bold"/>
                                                        <Run Text=" ГБ"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="16" Foreground="#FFD700" Margin="0,0,0,8">
                                                        <Run Text="Минуты: "/>
                                                        <Run Text="{Binding Path=Minutes}" Foreground="#FFA500" FontWeight="Bold"/>
                                                        <Run Text=" мин."/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="16" Foreground="#FFD700" Margin="0,0,0,8">
                                                        <Run Text="СМС: "/>
                                                        <Run Text="{Binding Path=SMS}" Foreground="#FFA500" FontWeight="Bold"/>
                                                        <Run Text=" шт."/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="16" Foreground="#FFD700" Margin="0,0,0,8">
                                                        <Run Text="СМС вне пакета: "/>
                                                        <Run Text="{Binding Path=SMSCost}" Foreground="#FFA500" FontWeight="Bold"/>
                                                        <Run Text=" ₽"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="16" Foreground="#FFD700">
                                                        <Run Text="Ежемесячно: "/>
                                                        <Run Text="{Binding Path=Cost}" Foreground="#FFA500" FontWeight="Bold"/>
                                                        <Run Text=" ₽"/>
                                                    </TextBlock>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                                    <TextBlock FontSize="16" Foreground="#FFD700" Margin="0,0,0,8">
                                                        <Run Text="Город: "/>
                                                        <Run Text="{Binding Path=CityCost}" Foreground="#FFA500" FontWeight="Bold"/>
                                                        <Run Text=" ₽/мин"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="16" Foreground="#FFD700" Margin="0,0,0,8">
                                                        <Run Text="Межгород: "/>
                                                        <Run Text="{Binding Path=IntercityCost}" Foreground="#FFA500" FontWeight="Bold"/>
                                                        <Run Text=" ₽/мин"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="16" Foreground="#FFD700" Margin="0,0,0,8">
                                                        <Run Text="Международный: "/>
                                                        <Run Text="{Binding Path=InternationalCost}" Foreground="#FFA500" FontWeight="Bold"/>
                                                        <Run Text=" ₽/мин"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="16" Foreground="#FFD700" Margin="0,0,0,8">
                                                        <Run Text="ГБ вне пакета: "/>
                                                        <Run Text="{Binding Path=GBCost}" Foreground="#FFA500" FontWeight="Bold"/>
                                                        <Run Text=" ₽"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="16" Foreground="#FFD700">
                                                        <Run Text="Стоимость перехода: "/>
                                                        <Run Text="{Binding Path=ConnectionCost}" Foreground="#FFA500" FontWeight="Bold"/>
                                                        <Run Text=" ₽"/>
                                                    </TextBlock>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="2" 
                                                        Command="{Binding ChangeRateCommand}" 
                                                        CommandParameter="{Binding Path=Id}" 
                                                        Foreground="#1A1A1A" 
                                                        Background="#FFD700" 
                                                        FontSize="15" 
                                                        FontWeight="Bold"
                                                        Height="60" 
                                                        Width="140"
                                                        BorderThickness="0"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center">
                                                    <TextBlock Text="Перейти на этот тариф!" 
                                                               TextAlignment="Center" 
                                                               TextWrapping="Wrap"/>
                                                </Button>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
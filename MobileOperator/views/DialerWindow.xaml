<Window x:Class="MobileOperator.views.DialerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Набор номера" Height="600" Width="400"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#1A1A1A">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="{Binding PhoneNumber}"
                   FontSize="48"
                   Foreground="#FFA500"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="20,40,20,20"/>

        <UniformGrid Grid.Row="1" Columns="3" Rows="4" Margin="20">
            <Button Content="1" Style="{StaticResource DialerButton}" Command="{Binding DigitCommand}" CommandParameter="1"/>
            <Button Content="2" Style="{StaticResource DialerButton}" Command="{Binding DigitCommand}" CommandParameter="2"/>
            <Button Content="3" Style="{StaticResource DialerButton}" Command="{Binding DigitCommand}" CommandParameter="3"/>
            <Button Content="4" Style="{StaticResource DialerButton}" Command="{Binding DigitCommand}" CommandParameter="4"/>
            <Button Content="5" Style="{StaticResource DialerButton}" Command="{Binding DigitCommand}" CommandParameter="5"/>
            <Button Content="6" Style="{StaticResource DialerButton}" Command="{Binding DigitCommand}" CommandParameter="6"/>
            <Button Content="7" Style="{StaticResource DialerButton}" Command="{Binding DigitCommand}" CommandParameter="7"/>
            <Button Content="8" Style="{StaticResource DialerButton}" Command="{Binding DigitCommand}" CommandParameter="8"/>
            <Button Content="9" Style="{StaticResource DialerButton}" Command="{Binding DigitCommand}" CommandParameter="9"/>
            <Button Content="*" Style="{StaticResource DialerButton}" Command="{Binding DigitCommand}" CommandParameter="*"/>
            <Button Content="0" Style="{StaticResource DialerButton}" Command="{Binding DigitCommand}" CommandParameter="0"/>
            <Button Content="⌫" Style="{StaticResource DialerButton}" Command="{Binding BackspaceCommand}"/>
        </UniformGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                    Background="#4CAF50" BorderBrush="#4CAF50" Margin="10"
                    Width="60" Height="60" 
                    Command="{Binding CallCommand}">
                <materialDesign:PackIcon Kind="Phone" Height="30" Width="30" />
            </Button>
            <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                    Background="#F44336" BorderBrush="#F44336" Margin="10"
                    Width="60" Height="60" 
                    Command="{Binding CloseCommand}">
                <materialDesign:PackIcon Kind="Close" Height="30" Width="30" />
            </Button>
        </StackPanel>
    </Grid>
</Window>

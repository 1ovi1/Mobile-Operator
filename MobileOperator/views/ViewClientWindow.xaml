<Window x:Class="MobileOperator.views.ViewClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="Мобильный оператор" Height="850" Width="950"
        Background="#1A1A1A" Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="VisibleButton" TargetType="Button">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Create}" Value="false">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VisibleTextBlock" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Create}" Value="false">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VisibleIfCreate" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Create}" Value="true">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VisibleIfFL" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ChectedFLStatus}" Value="true">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VisibleIfUL" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ChectedULStatus}" Value="true">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF8C00"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="#FFA500"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Height="70">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FF8C00" Offset="0"/>
                    <GradientStop Color="#FFA500" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <TextBlock Text="Просмотр клиента" Style="{StaticResource VisibleTextBlock}"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontSize="28" FontWeight="Bold" Foreground="#1A1A1A"/>

                <TextBlock Text="Новый клиент" Style="{StaticResource VisibleIfCreate}"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontSize="28" FontWeight="Bold" Foreground="#1A1A1A"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="#2A2A2A" BorderBrush="#FF8C00" BorderThickness="2" CornerRadius="15" Margin="20" Padding="20">
                <StackPanel>
                    <Grid Margin="0,0,0,20" Style="{StaticResource VisibleIfCreate}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <RadioButton Content="Физическое лицо" IsChecked="{Binding ChectedFLStatus}" Foreground="White" FontSize="18" Margin="0,0,20,0">
                                <RadioButton.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </RadioButton.LayoutTransform>
                            </RadioButton>
                            <RadioButton Content="Юридическое лицо" IsChecked="{Binding ChectedULStatus}" Foreground="White" FontSize="18">
                                <RadioButton.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </RadioButton.LayoutTransform>
                            </RadioButton>
                        </StackPanel>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Номер телефона:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="Пароль:" Style="{StaticResource LabelStyle}"/>
                            
                            <TextBlock Text="ФИО:" Style="{StaticResource LabelStyle}" Visibility="{Binding Visibility, ElementName=FioBox}"/>
                            <TextBlock Text="Паспортные данные:" Style="{StaticResource LabelStyle}" Visibility="{Binding Visibility, ElementName=PassportBox}"/>
                            
                            <TextBlock Text="Название организации:" Style="{StaticResource LabelStyle}" Visibility="{Binding Visibility, ElementName=OrgBox}"/>
                            <TextBlock Text="Адрес:" Style="{StaticResource LabelStyle}" Visibility="{Binding Visibility, ElementName=AddressBox}"/>
                            
                            <TextBlock Text="Баланс:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="Минуты:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="СМС:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="ГБ:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="Тариф:" Style="{StaticResource LabelStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBox Text="{Binding Number}" Height="32" Margin="0,4"/>
                            <TextBox Text="{Binding Password}" Height="32" Margin="0,4"/>

                            <Grid x:Name="FioBox" Style="{StaticResource VisibleIfFL}">
                                <TextBox Text="{Binding FIO}" Height="32" Margin="0,4"/>
                            </Grid>
                            <Grid x:Name="PassportBox" Style="{StaticResource VisibleIfFL}">
                                <TextBox Text="{Binding PassportDetails}" Height="32" Margin="0,4"/>
                            </Grid>

                            <Grid x:Name="OrgBox" Style="{StaticResource VisibleIfUL}">
                                <TextBox Text="{Binding OrganizationName}" Height="32" Margin="0,4"/>
                            </Grid>
                            <Grid x:Name="AddressBox" Style="{StaticResource VisibleIfUL}">
                                <TextBox Text="{Binding Address}" Height="32" Margin="0,4"/>
                            </Grid>

                            <syncfusion:UpDown NumberDecimalDigits="2" FontSize="18" Height="32" Margin="0,4" Value="{Binding Balance}" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                            <syncfusion:UpDown NumberDecimalDigits="0" FontSize="18" Height="32" Margin="0,4" Value="{Binding Minutes}" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                            <syncfusion:UpDown NumberDecimalDigits="0" FontSize="18" Height="32" Margin="0,4" Value="{Binding SMS}" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                            <syncfusion:UpDown NumberDecimalDigits="0" FontSize="18" Height="32" Margin="0,4" Value="{Binding GB}" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                            
                            <ComboBox ItemsSource="{Binding Rates}" SelectedValue="{Binding Rate}" SelectedValuePath="Id" DisplayMemberPath="Name"
                                      Height="32" Margin="0,4" FontSize="16" Background="#1A1A1A" Foreground="Black" BorderBrush="#FF8C00"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,30,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Command="{Binding DelClientCommand}" Content="Удалить клиента"
                                Style="{StaticResource VisibleButton}"
                                Background="#B22222" Foreground="White" FontSize="16" Height="45" Width="250" HorizontalAlignment="Left"/>

                        <Button Command="{Binding UpdateClientCommand}" Content="Сохранить"
                                Grid.Column="1"
                                Background="#FFD700" Foreground="#1A1A1A" FontWeight="Bold" FontSize="16" Height="45" Width="250" HorizontalAlignment="Right">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>

<Window x:Class="MobileOperator.views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MobileOperator"
        Title="Авторизация" Height="500" Width="600"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#1A1A1A">
        <Border Background="#2A2A2A" 
                BorderBrush="#FF8C00" 
                BorderThickness="2" 
                CornerRadius="20" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Padding="40"
                MinWidth="450"
                MaxWidth="500">
            <StackPanel>
                <TextBlock Text="С возвращением!" 
                           FontWeight="Bold" 
                           FontSize="32" 
                           Foreground="#FFD700"
                           TextAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Номер телефона или логин:" 
                           FontSize="16" 
                           Foreground="#FFD700"
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding Username}" 
                         FontSize="16" 
                         Background="#1A1A1A"
                         Foreground="#FFA500"
                         BorderBrush="#FF8C00"
                         BorderThickness="1"
                         Padding="10"
                         Margin="0,0,0,20"/>

                <TextBlock Text="Пароль:" 
                           FontSize="16" 
                           Foreground="#FFD700"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="passwordBox" 
                             FontSize="16" 
                             Background="#1A1A1A"
                             Foreground="#FFA500"
                             BorderBrush="#FF8C00"
                             BorderThickness="1"
                             Padding="10"
                             Margin="0,0,0,20"/>

                <TextBlock Text="Войти как:" 
                           FontSize="16" 
                           Foreground="#FFD700"
                           Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,0,0,30">
                    <RadioButton GroupName="Status" 
                                 FontSize="16" 
                                 Content="Пользователь" 
                                 Foreground="#FFA500"
                                 Command="{Binding CheckUserStatusCommand}" 
                                 CommandParameter="Client" 
                                 Margin="0,0,30,0"
                                 IsChecked="True"/>
                    <RadioButton GroupName="Status" 
                                 FontSize="16"  
                                 Content="Администратор" 
                                 Foreground="#FFA500"
                                 Command="{Binding CheckUserStatusCommand}" 
                                 CommandParameter="Admin"/>
                </StackPanel>

                <Button Command="{Binding LoginCommand}" 
                        CommandParameter="{Binding ElementName=passwordBox}"
                        Content="Войти" 
                        Foreground="#1A1A1A" 
                        Background="#FFD700" 
                        FontSize="18" 
                        FontWeight="Bold"
                        Height="45" 
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
<Window x:Class="MobileOperator.views.AdminSelectedRateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"  
        xmlns:local="clr-namespace:MobileOperator"
        mc:Ignorable="d"
        Title="Мобильный оператор" Height="800" Width="950"
        Background="#1A1A1A" Foreground="White">
    
    <Window.Resources>
        <Style x:Key="VisibleButton" TargetType="Button">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Create}" Value="false">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="VisibleTextBlock" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Create}" Value="false">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF8C00"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Height="70">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FF8C00" Offset="0"/>
                    <GradientStop Color="#FFA500" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <TextBlock Text="Просмотр тарифа" Style="{StaticResource VisibleTextBlock}"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontSize="28" FontWeight="Bold" Foreground="#1A1A1A"/>
                
                <TextBlock Text="Новый тариф"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontSize="28" FontWeight="Bold" Foreground="#1A1A1A">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Create}" Value="true">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>
        
        <Border Grid.Row="2" Background="#2A2A2A" BorderBrush="#FF8C00" BorderThickness="2" CornerRadius="15" Margin="20" Padding="20">
            <StackPanel>
                <TextBox HorizontalAlignment="Center" TextAlignment="Center" FontSize="24" Text="{Binding Rate}" Width="400" Margin="0,0,0,20"/>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Количество минут в месяц:" FontSize="18" Foreground="#FFA500" Margin="0,8" TextAlignment="Right"/>
                        <TextBlock Text="Количество ГБ в месяц:" FontSize="18" Foreground="#FFA500" Margin="0,8" TextAlignment="Right"/>
                        <TextBlock Text="Количество CMC в месяц:" FontSize="18" Foreground="#FFA500" Margin="0,8" TextAlignment="Right"/>
                        <TextBlock Text="Ежемесячное списание:" FontSize="18" Foreground="#FFA500" Margin="0,8" TextAlignment="Right"/>
                        <TextBlock Text="Стоимость подключения:" FontSize="18" Foreground="#FFA500" Margin="0,8" TextAlignment="Right"/>
                        <TextBlock Text="Стоимость минуты по городу (вне пакета):" FontSize="18" Foreground="#FFA500" Margin="0,8" TextAlignment="Right"/>
                        <TextBlock Text="Стоимость минуты по межгороду:" FontSize="18" Foreground="#FFA500" Margin="0,8" TextAlignment="Right"/>
                        <TextBlock Text="Стоимость минуты в международных звонках:" FontSize="18" Foreground="#FFA500" Margin="0,8" TextAlignment="Right"/>
                        <TextBlock Text="Стоимость СМС (вне пакета):" FontSize="18" Foreground="#FFA500" Margin="0,8" TextAlignment="Right"/>
                        <TextBlock Text="Стоимость ГБ (вне пакета):" FontSize="18" Foreground="#FFA500" Margin="0,8" TextAlignment="Right"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <syncfusion:UpDown NumberDecimalDigits="0" FontSize="18" Height="32" Margin="0,4" Value="{Binding Minutes}" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                        <syncfusion:UpDown NumberDecimalDigits="0" FontSize="18" Height="32" Margin="0,4" Value="{Binding GB}" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                        <syncfusion:UpDown NumberDecimalDigits="0" FontSize="18" Height="32" Margin="0,4" Value="{Binding SMS}" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                        <syncfusion:UpDown FontSize="18" Height="32" Margin="0,4" Value="{Binding Cost}" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                        <syncfusion:UpDown FontSize="18" Height="32" Margin="0,4" Value="{Binding ConnectionCost}" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                        <syncfusion:UpDown FontSize="18" Height="32" Margin="0,4" Value="{Binding CityCost}" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                        <syncfusion:UpDown FontSize="18" Height="32" Margin="0,4" Value="{Binding IntercityCost}" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                        <syncfusion:UpDown FontSize="18" Height="32" Margin="0,4" Value="{Binding InternationalCost}" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                        <syncfusion:UpDown FontSize="18" Height="32" Margin="0,4" Value="{Binding SMSCost}" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                        <syncfusion:UpDown FontSize="18" Height="32" Margin="0,4" Value="{Binding GBCost}" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                        
                        <CheckBox FontSize="18" Height="36" HorizontalAlignment="Left" Margin="0,10,0,0" Name="Corporate" Content="Корпоративный" IsChecked="{Binding Corporate}" Foreground="#FFA500">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                            </CheckBox.LayoutTransform>
                        </CheckBox>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Command="{Binding RemoveRateCommand}" Content="Удалить тариф"
                            Style="{StaticResource VisibleButton}"
                            Background="#B22222" Foreground="White" FontSize="16" Height="45" Width="250" HorizontalAlignment="Left"/>

                    <Button Command="{Binding UpdateRateCommand}" Content="Сохранить изменения"
                            Grid.Column="1"
                            Background="#FFD700" Foreground="#1A1A1A" FontWeight="Bold" FontSize="16" Height="45" Width="250" HorizontalAlignment="Right">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>

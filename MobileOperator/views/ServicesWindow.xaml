<Page x:Class="MobileOperator.views.ServicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:local="clr-namespace:MobileOperator"
        mc:Ignorable="d"
>
    <Grid Background="#1A1A1A">
        <ScrollViewer Margin="15" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Border Background="#2A2A2A" 
                        BorderBrush="#FF8C00" 
                        BorderThickness="2" 
                        CornerRadius="15" 
                        Padding="20" 
                        Margin="0,0,0,15" 
                        Grid.Row="0">
                    <StackPanel>
                        <TextBlock Text="Подключенные услуги:" 
                                   TextAlignment="Center" 
                                   FontSize="26" 
                                   Foreground="#FFD700" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <ListBox ItemsSource="{Binding ConnectionServices}" 
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1A1A1A" 
                                            BorderBrush="#FF8C00" 
                                            BorderThickness="1" 
                                            CornerRadius="10" 
                                            Padding="20" 
                                            Margin="0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Path=Name}" 
                                                           FontSize="22" 
                                                           Foreground="#FFA500" 
                                                           FontWeight="Bold"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,10"/>
                                                <TextBlock FontSize="16" 
                                                           Foreground="#FFD700"
                                                           TextWrapping="Wrap">
                                                    <Run Text="Списание: "/>
                                                    <Run Text="{Binding Path=Cost}" FontWeight="Bold"/>
                                                    <Run Text=" ₽/мес"/>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" 
                                                        VerticalAlignment="Center"
                                                        Margin="20,0">
                                                <TextBlock Text="{Binding Path=Conditions}" 
                                                           FontSize="16" 
                                                           Foreground="#FFD700"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                            
                                            <Button Grid.Column="2" 
                                                    Command="{Binding DisconnectServiceCommand}" 
                                                    CommandParameter="{Binding Path=Id}" 
                                                    Content="Отключить" 
                                                    Foreground="#1A1A1A" 
                                                    Background="#F44336" 
                                                    FontSize="15" 
                                                    FontWeight="Bold"
                                                    Height="40" 
                                                    Width="130"
                                                    BorderThickness="0"
                                                    VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
                
                <Border Background="#2A2A2A" 
                        BorderBrush="#FF8C00" 
                        BorderThickness="2" 
                        CornerRadius="15" 
                        Padding="20" 
                        Grid.Row="1">
                    <StackPanel>
                        <TextBlock Text="Доступные для подключения услуги:" 
                                   TextAlignment="Center" 
                                   FontSize="26" 
                                   Foreground="#FFD700" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <ListBox ItemsSource="{Binding AvailableServices}" 
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1A1A1A" 
                                            BorderBrush="#FF8C00" 
                                            BorderThickness="1" 
                                            CornerRadius="10" 
                                            Padding="20" 
                                            Margin="0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Path=Name}" 
                                                           FontSize="22" 
                                                           Foreground="#FFA500" 
                                                           FontWeight="Bold"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,10"/>
                                                <TextBlock FontSize="16" 
                                                           Foreground="#FFD700"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,5">
                                                    <Run Text="Списание: "/>
                                                    <Run Text="{Binding Path=Cost}" FontWeight="Bold"/>
                                                    <Run Text=" ₽/мес"/>
                                                </TextBlock>
                                                <TextBlock FontSize="16" 
                                                           Foreground="#FFD700"
                                                           TextWrapping="Wrap">
                                                    <Run Text="Подключение: "/>
                                                    <Run Text="{Binding Path=ConnectionCost}" FontWeight="Bold"/>
                                                    <Run Text=" ₽"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" 
                                                        VerticalAlignment="Center"
                                                        Margin="20,0">
                                                <TextBlock Text="{Binding Path=Conditions}" 
                                                           FontSize="16" 
                                                           Foreground="#FFD700"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                            
                                            <Button Grid.Column="2" 
                                                    Command="{Binding ConnectServiceCommand}" 
                                                    CommandParameter="{Binding Path=Id}" 
                                                    Content="Подключить" 
                                                    Foreground="#1A1A1A" 
                                                    Background="#FFD700" 
                                                    FontSize="15" 
                                                    FontWeight="Bold"
                                                    Height="40" 
                                                    Width="130"
                                                    BorderThickness="0"
                                                    VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
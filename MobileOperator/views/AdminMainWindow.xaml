<Window x:Class="MobileOperator.views.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:MobileOperator.views"
        mc:Ignorable="d"
        Title="Панель администратора" Height="800" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#1A1A1A" Foreground="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Height="70">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FF8C00" Offset="0"/>
                    <GradientStop Color="#FFA500" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <TextBlock Text="Администратор" 
                           VerticalAlignment="Center" HorizontalAlignment="Left" 
                           Margin="20,0,0,0" FontSize="28" FontWeight="Bold" Foreground="#1A1A1A"/>
                
                <Button Content="Выйти" Command="{Binding LogOutCommand}"
                        HorizontalAlignment="Right" Margin="0,0,20,0"
                        Background="#1A1A1A" Foreground="#FFD700" FontWeight="Bold"
                        BorderThickness="0" Padding="15,5" FontSize="14">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
        
        <TabControl x:Name="AdminTabControl" Grid.Row="1" 
                    Background="#1A1A1A" BorderThickness="0"
                    TabStripPlacement="Top" SelectionChanged="AdminTabControl_SelectionChanged"
                    Margin="0,10,0,0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" 
                                        BorderThickness="1" 
                                        BorderBrush="#FF8C00"
                                        Background="#2A2A2A"
                                        Margin="2,0">
                                    <ContentPresenter x:Name="ContentSite"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    ContentSource="Header"
                                                    Margin="15,10"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#FFA500"/>
                                        <Setter Property="Foreground" Value="#1A1A1A"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Foreground" Value="#FFA500"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </TabControl.Resources>
            
            <TabItem Header="Клиенты">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,15">
                        <Button Command="{Binding AddClientCommand}" Content="Добавить клиента"
                                Background="#FFD700" Foreground="#1A1A1A" FontWeight="Bold" FontSize="16"
                                Height="40" Padding="20,0" BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                    
                    <Border Grid.Row="1" Background="#2A2A2A" 
                            BorderBrush="#FF8C00" BorderThickness="2" 
                            CornerRadius="15" Padding="10">
                        <DataGrid x:Name="ClientsDataGrid" 
                                  ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient}"
                                  AutoGenerateColumns="False" CanUserAddRows="False"
                                  Background="#1A1A1A" RowBackground="#2A2A2A" AlternatingRowBackground="#1A1A1A"
                                  Foreground="#FFA500" BorderBrush="#FF8C00" BorderThickness="0"
                                  HeadersVisibility="Column" GridLinesVisibility="None" FontSize="14">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#FF8C00"/>
                                    <Setter Property="Foreground" Value="#1A1A1A"/>
                                    <Setter Property="Padding" Value="10"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Имя / Организация" Binding="{Binding NameOrOrg}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Номер" Binding="{Binding Number}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Тариф" Binding="{Binding RateName}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Баланс" Binding="{Binding Balance}" Width="Auto" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Тип" Binding="{Binding ClientType}" Width="Auto" IsReadOnly="True"/>
                            </DataGrid.Columns>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDoubleClick">
                                    <i:InvokeCommandAction Command="{Binding ViewClientCommand}" 
                                                           CommandParameter="{Binding SelectedItem, ElementName=ClientsDataGrid}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>
            
            <TabItem Header="Тарифы">
                <Frame x:Name="RatesFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="Услуги">
                <Frame x:Name="ServicesFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="Детализация звонков">
                <Frame x:Name="DetailingFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="История услуг">
                <Frame x:Name="HistoryFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

<Page x:Class="MobileOperator.views.AdminDetailingPage2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="История услуг"
      Background="#1A1A1A" Foreground="White">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="История подключений (Админ)" 
                   TextAlignment="Center" 
                   FontSize="24" 
                   Foreground="#FFD700"
                   FontWeight="Bold"
                   Margin="0,0,0,15"
                   Grid.Row="0"/>

        <!-- Панель поиска -->
        <Border Grid.Row="1" Background="#2A2A2A" CornerRadius="15" Padding="20" Margin="0,0,0,15" BorderBrush="#FF8C00" BorderThickness="2">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Номер:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#FFD700" FontSize="16"/>
                    <TextBox Text="{Binding SearchNumber}" Grid.Column="1" Margin="0,0,20,0" Padding="5" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                    <TextBlock Text="Или Имя:" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#FFD700" FontSize="16"/>
                    <TextBox Text="{Binding SearchName}" Grid.Column="3" Padding="5" Background="#1A1A1A" Foreground="White" BorderBrush="#FF8C00"/>
                </Grid>
                <Grid Margin="0,15,0,0">
                    <Button Command="{Binding GetHistoryCommand}" 
                            Content="Показать историю" HorizontalAlignment="Right" Width="200" Height="35"
                            Background="#FFD700" Foreground="#1A1A1A" FontWeight="Bold" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Таблицы -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Тарифы -->
            <Border Grid.Column="0" Background="#2A2A2A" BorderBrush="#FF8C00" BorderThickness="2" CornerRadius="15" Padding="10" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="История тарифов" TextAlignment="Center" FontSize="18" Foreground="#FFD700" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DataGrid Grid.Row="1" ItemsSource="{Binding RateHistory}" AutoGenerateColumns="False" CanUserAddRows="False"
                              Background="#1A1A1A" RowBackground="#2A2A2A" AlternatingRowBackground="#1A1A1A"
                              Foreground="#FFA500" BorderBrush="#FF8C00" BorderThickness="0" HeadersVisibility="Column" GridLinesVisibility="None" FontSize="14">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF8C00"/>
                                <Setter Property="Foreground" Value="#1A1A1A"/>
                                <Setter Property="Padding" Value="8"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Тариф" Binding="{Binding RateName}" Width="*"/>
                            <DataGridTextColumn Header="Подключен" Binding="{Binding FromDateToString}" Width="Auto"/>
                            <DataGridTextColumn Header="Отключен" Binding="{Binding TillDateToString}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Услуги -->
            <Border Grid.Column="1" Background="#2A2A2A" BorderBrush="#FF8C00" BorderThickness="2" CornerRadius="15" Padding="10" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="История услуг" TextAlignment="Center" FontSize="18" Foreground="#FFD700" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DataGrid Grid.Row="1" ItemsSource="{Binding ServiceHistory}" AutoGenerateColumns="False" CanUserAddRows="False"
                              Background="#1A1A1A" RowBackground="#2A2A2A" AlternatingRowBackground="#1A1A1A"
                              Foreground="#FFA500" BorderBrush="#FF8C00" BorderThickness="0" HeadersVisibility="Column" GridLinesVisibility="None" FontSize="14">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF8C00"/>
                                <Setter Property="Foreground" Value="#1A1A1A"/>
                                <Setter Property="Padding" Value="8"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Услуга" Binding="{Binding ServiceName}" Width="*"/>
                            <DataGridTextColumn Header="Подключена" Binding="{Binding FromDateToString}" Width="Auto"/>
                            <DataGridTextColumn Header="Отключена" Binding="{Binding TillDateToString}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Экспорт -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Command="{Binding PrintToExelDetailingCommand}" Content="Скачать в Excel" 
                    Grid.Column="0" Margin="0,0,10,0" Height="45"
                    Background="#FFD700" Foreground="#1A1A1A" FontWeight="Bold" FontSize="16" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Command="{Binding PrintToWordDetailingCommand}" Content="Скачать в Word" 
                    Grid.Column="1" Margin="10,0,0,0" Height="45"
                    Background="#FFD700" Foreground="#1A1A1A" FontWeight="Bold" FontSize="16" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Page>

<Window x:Class="MobileOperator.views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MobileOperator"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Мобильный оператор" Height="800" Width="1000">
    <Grid Background="#1A1A1A">
        <Border VerticalAlignment="Top" Height="70">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FF8C00" Offset="0"/>
                    <GradientStop Color="#FFA500" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock Text="Сотовый оператор"
                       Foreground="#1A1A1A"
                       FontWeight="Bold"
                       FontSize="36"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>

        <TabControl x:Name="MainTabControl" 
                    Margin="0,70,0,0" 
                    Background="#1A1A1A"
                    BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" 
                                        BorderThickness="1" 
                                        BorderBrush="#FF8C00"
                                        Background="#2A2A2A">
                                    <ContentPresenter x:Name="ContentSite"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    ContentSource="Header"
                                                    Margin="8,12"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#FFA500"/>
                                        <Setter Property="Foreground" Value="#1A1A1A"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Foreground" Value="#FFA500"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </TabControl.Resources>
            
            <TabItem Header="Мой кабинет">
                <Grid Background="#1A1A1A">
                    <Border Background="#2A2A2A"
                            BorderBrush="#FF8C00"
                            BorderThickness="2"
                            CornerRadius="10"
                            Margin="15,15,15,0"
                            VerticalAlignment="Top"
                            Height="60">
                        <Grid Margin="20,0">
                            <TextBlock VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontSize="18"
                                       Foreground="#FFD700">
                                <Run Text="Авторизация: " FontWeight="Bold"/>
                                <Run Text="{Binding Path=ClientName}" Foreground="#FFA500"/>
                                <Run Text=" — тел. " FontWeight="Bold"/>
                                <Run Text="{Binding Path=ClientNumber}" Foreground="#FFA500"/>
                            </TextBlock>

                            <Button Command="{Binding LogOutCommand}"
                                    Content="Выйти"
                                    Foreground="#1A1A1A"
                                    Background="#FFD700"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Width="120"
                                    Height="36"
                                    BorderThickness="0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                    
                    <Grid Margin="15,90,15,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        
                        <Border Background="#2A2A2A"
                                BorderBrush="#FF8C00"
                                BorderThickness="2"
                                CornerRadius="15"
                                Padding="20"
                                Margin="0,0,10,0"
                                Grid.Column="0"
                                Grid.Row="0">
                            <StackPanel>
                                <TextBlock Text="Мой тариф:"
                                           TextAlignment="Center"
                                           FontSize="26"
                                           Foreground="#FFD700"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="{Binding Path=Rate}"
                                           TextAlignment="Center"
                                           FontSize="28"
                                           Foreground="#FFA500"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="{Binding Path=Corporate}"
                                           TextAlignment="Center"
                                           FontSize="18"
                                           Foreground="#FF8C00"
                                           Margin="0,0,0,15"/>

                                <Separator Background="#FF8C00" Margin="0,10"/>

                                <TextBlock Text="Ежемесячная плата:"
                                           TextAlignment="Center"
                                           FontSize="18"
                                           Foreground="#FFD700"
                                           Margin="0,10,0,5"/>

                                <TextBlock TextAlignment="Center"
                                           FontSize="32"
                                           Foreground="#FFA500"
                                           FontWeight="Bold">
                                    <Run Text="{Binding Path=Cost}"/>
                                    <Run Text=" ₽"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#2A2A2A"
                                BorderBrush="#FF8C00"
                                BorderThickness="2"
                                CornerRadius="15"
                                Padding="25"
                                Margin="10,0,0,0"
                                Grid.Column="1"
                                Grid.Row="0">
                            <StackPanel>
                                <TextBlock Text="Мой баланс:"
                                           FontSize="26"
                                           Foreground="#FFD700"
                                           FontWeight="Bold"
                                           TextAlignment="Center"
                                           Margin="0,0,0,10"/>

                                <TextBlock TextAlignment="Center"
                                           FontSize="40"
                                           Foreground="#FFA500"
                                           FontWeight="Bold"
                                           Margin="0,0,0,20">
                                    <Run Text="{Binding Balance}"/>
                                    <Run Text=" ₽"/>
                                </TextBlock>

                                <Separator Background="#FF8C00" Margin="0,0,0,15"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Пополнить:"
                                               VerticalAlignment="Center"
                                               FontSize="18"
                                               Foreground="#FFD700"
                                               Margin="0,0,10,0"
                                               Grid.Column="0"/>

                                    <syncfusion:UpDown Value="{Binding Amount}"
                                                      FontSize="18"
                                                      Background="#1A1A1A"
                                                      Foreground="#FFA500"
                                                      BorderBrush="#FF8C00"
                                                      Margin="0,0,5,0"
                                                      Grid.Column="1"/>

                                    <TextBlock Text="₽"
                                               FontSize="18"
                                               Foreground="#FFD700"
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"
                                               Grid.Column="2"/>

                                    <Button Command="{Binding PayCommand}"
                                            Content="Оплатить"
                                            Foreground="#1A1A1A"
                                            Background="#FFD700"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Height="36"
                                            Width="110"
                                            BorderThickness="0"
                                            Grid.Column="3"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Background="#2A2A2A"
                                BorderBrush="#FF8C00"
                                BorderThickness="2"
                                CornerRadius="15"
                                Padding="20"
                                Margin="0,15,10,0"
                                Grid.Row="1"
                                Grid.Column="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Подключенные услуги:"
                                           TextAlignment="Center"
                                           FontSize="22"
                                           Foreground="#FFD700"
                                           FontWeight="Bold"
                                           Margin="0,0,0,15"
                                           Grid.Row="0"/>

                                <ListBox Grid.Row="1"
                                         ItemsSource="{Binding Services}"
                                         Background="#1A1A1A"
                                         BorderBrush="#FF8C00"
                                         BorderThickness="1"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         ScrollViewer.CanContentScroll="True"
                                         Margin="0,0,0,45">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#2A2A2A"
                                                    BorderBrush="#FF8C00"
                                                    BorderThickness="1"
                                                    CornerRadius="5"
                                                    Padding="10"
                                                    Margin="5">
                                                <TextBlock Text="{Binding Path=Name}"
                                                           FontSize="18"
                                                           Foreground="#FFA500"/>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>

                        
                        <Border Background="#2A2A2A"
                                BorderBrush="#FF8C00"
                                BorderThickness="2"
                                CornerRadius="15"
                                Padding="25"
                                Margin="10,15,0,0"
                                Grid.Row="1"
                                Grid.Column="1">
                            <StackPanel>
                                <TextBlock Text="Осталось:"
                                           TextAlignment="Center"
                                           FontSize="26"
                                           Foreground="#FFD700"
                                           FontWeight="Bold"
                                           Margin="0,0,0,20"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Background="#1A1A1A"
                                            BorderBrush="#FF8C00"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="15,10"
                                            Margin="0,0,30,10"
                                            Grid.Row="0"
                                            Grid.Column="0">
                                        <TextBlock Text="Интернет"
                                                   FontSize="20"
                                                   Foreground="#FFD700"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Grid.Row="0"
                                               Grid.Column="1"
                                               FontSize="32"
                                               Foreground="#FFA500"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               Margin="0,0,60,10">
                                        <Run Text="{Binding Path=GB}"/>
                                        <Run Text=" ГБ" FontSize="24"/>
                                    </TextBlock>

                                    <Border Background="#1A1A1A"
                                            BorderBrush="#FF8C00"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="15,10"
                                            Margin="0,0,30,10"
                                            Grid.Row="1"
                                            Grid.Column="0">
                                        <TextBlock Text="Минуты"
                                                   FontSize="20"
                                                   Foreground="#FFD700"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="1"
                                               FontSize="32"
                                               Foreground="#FFA500"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               Margin="0,0,60,10">
                                        <Run Text="{Binding Path=Minutes}"/>
                                        <Run Text=" мин." FontSize="24"/>
                                    </TextBlock>

                                    <Border Background="#1A1A1A"
                                            BorderBrush="#FF8C00"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="15,10"
                                            Margin="0,0,30,0"
                                            Grid.Row="2"
                                            Grid.Column="0">
                                        <TextBlock Text="СМС"
                                                   FontSize="20"
                                                   Foreground="#FFD700"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Grid.Row="2"
                                               Grid.Column="1" 
                                               FontSize="32"
                                               Foreground="#FFA500"
                                               FontWeight="Bold"
                                               Margin="0,0,60,0"
                                               VerticalAlignment="Center">
                                        <Run Text="{Binding Path=SMS}"/>
                                        <Run Text=" смс" FontSize="24"/>
                                    </TextBlock>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <Button HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Margin="30,0,0,30"
                            Height="40"
                            Background="#B22222"
                            BorderBrush="#B22222"
                            Foreground="White"
                            FontWeight="Bold"
                            Content="Промотать в следующий месяц"
                            Command="{Binding SimulateNextMonthCommand}">
                        <Button.ToolTip>
                            <ToolTip Content="Списать абонентскую плату и обновить пакеты"/>
                        </Button.ToolTip>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,30,30"
                            Width="60"
                            Height="60"
                            Background="#FFD700"
                            BorderBrush="#FFD700"
                            Command="{Binding OpenDialerCommand}">
                        <materialDesign:PackIcon Kind="Phone" Height="30" Width="30" Foreground="#1A1A1A" />
                    </Button>
                </Grid>
            </TabItem>
            
            <TabItem Header="Услуги">
                <Frame x:Name="ServicesFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="Тарифы">
                <Frame x:Name="RatesFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="Звонки">
                <Frame x:Name="DetailingFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="Тарифы и услуги">
                <Frame x:Name="Detailing2Frame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="Списания">
                <Frame x:Name="WriteOffsFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

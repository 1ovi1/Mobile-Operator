<Page x:Class="MobileOperator.views.AdminServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Услуги"
      Background="#1A1A1A" Foreground="White">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Command="{Binding AddServiceCommand}" 
                Content="Добавить услугу" HorizontalAlignment="Right" Margin="0,0,0,15"
                Background="#FFD700" Foreground="#1A1A1A" FontWeight="Bold" FontSize="16"
                Height="40" Padding="20,0" BorderThickness="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <Border Grid.Row="1" Background="#2A2A2A" BorderBrush="#FF8C00" BorderThickness="2" CornerRadius="15" Padding="10">
            <DataGrid ItemsSource="{Binding Services}" SelectedItem="{Binding SelectedService}"
                      AutoGenerateColumns="False" CanUserAddRows="False"
                      Background="#1A1A1A" RowBackground="#2A2A2A" AlternatingRowBackground="#1A1A1A"
                      Foreground="#FFA500" BorderBrush="#FF8C00" BorderThickness="0" HeadersVisibility="Column" GridLinesVisibility="None" FontSize="14">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF8C00"/>
                        <Setter Property="Foreground" Value="#1A1A1A"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost, StringFormat={}{0:C}}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Подключение" Binding="{Binding ConnectionCost}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Условия" Binding="{Binding Conditions}" Width="2*" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
